{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Dashboard",
  "identifier": "com.claude.dashboard",
  "version": "0.7.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Dashboard",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": []
  }
}
